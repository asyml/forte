{
  "$schema": "http://json-schema.org/draft-7/schema#",
  "title": "Ontology Generation Config",
  "description": "User defined config for automatic generation of ontology.",
  "type": "object",
  "required": [
    "definitions"
  ],
  "properties": {
    "ontology_name": {
      "description": "Name of the ontology.",
      "type": "string"
    },
    "additional_prefixes": {
      "description": "",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "definitions": {
      "description": "A list of entry class definitions.",
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "object",
        "required": [
          "entry_name",
          "parent_entry"
        ],
        "properties": {
          "entry_name": {
            "description": "Name of the entry class.",
            "type": "string"
          },
          "parent_entry": {
            "description": "Parent entry of the entry class.",
            "type": "string"
          },
          "attributes": {
            "description": "Attributes of the entry class.",
            "type": "array",
            "uniqueItems": true,
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "description": "Name of the attribute.",
                  "type": "string"
                },
                "type": {
                  "description": "Type of the entry class.",
                  "type": "string"
                },
                "item_type": {
                  "description": "Item type if attribute type is composable",
                  "type": "string"
                }
              },
              "if": {
                "properties": {
                  "name": {
                    "enum": ["List"]
                  }
                }
              },
              "then": {
                "required": [
                "name",
                "type",
                "item_type"
              ]
              },
              "else": {
                "required": [
                "name",
                "type"
              ]
              }
            }
          },
          "parent_type": {
            "description": "Parent type if entry is of Link type.",
            "type": "string"
          },
          "child_type": {
            "description": "Child type if entry is of Link type.",
            "type": "string"
          },
          "member_type": {
            "description": "Member type if entry is of Group type.",
            "type": "string"
          }
        }
      }
    }
  }
}